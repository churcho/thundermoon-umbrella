<h1>Counter</h1>

<div class="counter">
  <div phx-value="1" phx-click="inc">+</div>
  <div>@counter.digit_1</div>
  <div phx-value="1" phx-click="dec">-</div>

  <div phx-value="10" phx-click="inc">+</div>
  <div>@counter.digit_10</div>
  <div phx-value="10" phx-click="dec">-</div>

  <div phx-value="100" phx-click="inc">+</div>
  <div>@counter.digit_100</div>
  <div phx-value="100" phx-click="dec">-</div>
</div>